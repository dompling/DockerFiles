
FROM alpine

RUN apt-get update
RUN apk add --no-cache --virtual .build-deps \
    ca-certificates \
    curl \
    tzdata \
    git \
    nodejs \
    npm \
    nginx\
    && mkdir /git \
    && mkdir /Sub-Store

ENV GIT="https://github.com/dompling/Sub-Store.git"
ENV DOMAIN="/"

WORKDIR /Sub-Store

COPY /Sub-Store/sub-store.sh /usr/local/bin/sub-store
RUN chmod +x /usr/local/bin/sub-store

RUN git clone ${GIT} /git \
    && cd /git/backend \
    && cnpm install \
    && cd /git/web \
    && cnpm install

ENTRYPOINT [ "/usr/local/bin/sub-store.sh" ]