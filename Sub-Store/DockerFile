
FROM alpine

RUN apk update
RUN apk add --no-cache --virtual .build-deps \
    ca-certificates \
    curl \
    tzdata \
    git \
    nodejs \
    npm \
    nginx\
    && mkdir /git \
    && mkdir /docker \
    && mkdir /Sub-Store \
    && npm install -g cnpm pm2

COPY /Sub-Store/sub-store.sh /usr/local/bin
COPY /Sub-Store/nginx/nginx.conf /etc/nginx/nginx
RUN chmod +x /usr/local/bin/sub-store.sh

ENV GIT="https://github.com/dompling/Sub-Store.git"
ENV DOMAIN="/"

WORKDIR /Sub-Store

RUN git clone ${GIT} /git

ENTRYPOINT [ "/usr/local/bin/sub-store.sh" ]